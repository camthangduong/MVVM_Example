<Window x:Class="Silent_Update.Views.InProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silent_Update.Views"
        mc:Ignorable="d"
        Background="Gainsboro"
        Title="InProgressBar" Height="150" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Border>
        <StackPanel Margin="10, 10, 10, 10">
            <TextBlock FontWeight="Bold" Margin="0, 0, 0, 10">Please wait..</TextBlock>
            <TextBlock>Working on file ..</TextBlock>
            <Grid Margin="0, 10, 0, 15">
                <ProgressBar IsIndeterminate="True" Height="20" ></ProgressBar>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">10/100</TextBlock>
            </Grid>
            <Button Content="Cancel" Width="100"></Button>
        </StackPanel>
    </Border>
</Window>
